# Development Dockerfile - Optimized for faster builds
# Uses lighter dependencies for development

FROM python:3.12-slim

WORKDIR /app

# Install system dependencies for development
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        gcc \
        g++ \
        curl \
        git \
        && rm -rf /var/lib/apt/lists/*

# Copy and install development requirements first for better caching
COPY requirements-dev.txt ./
RUN pip install --no-cache-dir -r requirements-dev.txt

# Copy source code
COPY src/ ./src/

# Create development directories
RUN mkdir -p /app/data/jobs /app/data/logs /app/storage

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash app && \
    chown -R app:app /app

# Switch to non-root user
USER app

# Development entry point with hot-reload support
CMD ["python", "-m", "uvicorn", "src.server:app", "--reload", "--host", "0.0.0.0", "--port", "8000"]

# Expose ports for development
EXPOSE 8000

# Metadata
LABEL maintainer="LinkedIn Agent Team"
LABEL version="dev-optimized"
LABEL description="Optimized development LinkedIn Agent"